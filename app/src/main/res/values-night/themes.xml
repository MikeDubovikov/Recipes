<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Recipes" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Customize your dark theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="colorAccent">@color/orange</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brown</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CardBackground">
        <item name="android:background">@color/brown</item>
    </style>

    <style name="CardCategory">
        <item name="android:background">@color/eerie_black2</item>
    </style>

    <style name="CardMeals">
        <item name="android:background">@color/eerie_black</item>
    </style>

    <style name="ButtonBackground">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">@color/brown</item>
    </style>

    <style name="SearchBackground">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="SearchButtonBackground">
        <item name="android:backgroundTint">@color/grey</item>
    </style>

    <style name="Theme.Recipes" parent="Base.Theme.Recipes" />
</resources>